<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_successful_password_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e1e1e1"
    tools:context="com.team16.oose_project.registration.password.SuccessfulPasswordSetup">

    <LinearLayout
        android:id="@+id/spslStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="100dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/spsStep"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#6e6e6e"
            android:textSize="12sp"
            android:text="Step 3/3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/spslPassword"
        android:layout_below="@+id/spslStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/spsPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6e6e6e"
            android:textSize="20sp"
            android:text="Password" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/spslPasswordInput"
        android:layout_below="@+id/spslPassword"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/spsPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/successful_verification_edittext"
            android:textAlignment="center"
            android:textSize="20sp"
            android:text="" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/spslButton"
        android:layout_below="@+id/spslPasswordInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/spsButton"
            android:text="Done"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:background="@drawable/successful_verification_button"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />
    </LinearLayout>
</RelativeLayout>