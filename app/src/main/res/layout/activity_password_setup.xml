<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_password_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e1e1e1"
    tools:context="com.team16.oose_project.registration.password.PasswordSetup">

    <LinearLayout
        android:id="@+id/pslStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="100dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/psSetup"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#6e6e6e"
            android:textSize="12sp"
            android:text="Step 3/3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pslPassword"
        android:layout_below="@+id/pslStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/psPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6e6e6e"
            android:textSize="20sp"
            android:text="Password" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pslPasswordInput"
        android:layout_below="@+id/pslPassword"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/psPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/verification_edittext"
            android:textAlignment="center"
            android:maxLength="20"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pslPasswordConfirmation"
        android:layout_below="@+id/pslPasswordInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/psPasswordCondirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6e6e6e"
            android:textSize="20sp"
            android:text="Confirm Password" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pslPasswordConfirmationInput"
        android:layout_below="@+id/pslPasswordConfirmation"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/psPasswordConfirmationInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/verification_edittext"
            android:textAlignment="center"
            android:maxLength="20"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pslButton"
        android:layout_below="@+id/pslPasswordConfirmationInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/angry_btn"
            android:text="Finish"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:background="@drawable/verification_button"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:onClick="verifyPassword"
            />
    </LinearLayout>
</RelativeLayout>