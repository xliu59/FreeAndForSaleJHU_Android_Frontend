<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivItemImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="8dp" />

    <TextView
        android:id="@+id/ivName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_toRightOf="@+id/ivItemImage"
        android:text="Name"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/ivCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/ivItemImage"
        android:layout_below="@+id/ivName"
        android:text="Condition"
        android:textSize="15dp"
        android:layout_alignBottom="@+id/ivItemImage"/>

    <TextView
        android:id="@+id/ivIsDeliver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/ivCondition"
        android:layout_below="@+id/ivName"
        android:text="IsDeliver"
        android:textSize="15dp"
        android:layout_alignBottom="@+id/ivItemImage"/>

    <TextView
        android:id="@+id/ivDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/ivIsDeliver"
        android:layout_below="@+id/ivName"
        android:text="Distance"
        android:textSize="15dp"
        android:layout_alignBottom="@+id/ivItemImage"/>

    <TextView
        android:id="@+id/ivPrice"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/ivDistance"
        android:text="Price"
        android:layout_alignParentRight="true"
        android:textSize="20dp"
        android:layout_alignTop="@+id/ivItemImage" />

    <Button
        android:id="@+id/likeButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/ivPrice"
        android:layout_alignParentRight="true"
        android:text="like"
        android:onClick="addToWishList"
        android:layout_alignBottom="@+id/ivItemImage"
        android:layout_toRightOf="@+id/ivDistance"
        android:layout_toEndOf="@+id/ivDistance" />
</RelativeLayout>
