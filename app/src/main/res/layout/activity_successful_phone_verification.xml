<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_successful_phone_verification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e1e1e1"
    tools:context="com.team16.oose_project.registration.phone.SuccessfulPhoneRegistration">

    <LinearLayout
        android:id="@+id/spvlStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="100dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/spvStep"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#6e6e6e"
            android:textSize="12sp"
            android:text="Step 2/3" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/spvlNumber"
        android:layout_below="@+id/spvlStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/spvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6e6e6e"
            android:textSize="20sp"
            android:text="Phone Number" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/spvlNumberInput"
        android:layout_below="@+id/spvlNumber"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:paddingTop="10dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/spvNumberInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/successful_verification_edittext"
            android:textAlignment="center"
            android:textSize="20sp"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/spvlButton"
        android:layout_below="@+id/spvlNumberInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/spvButton"
            android:text="Vertified"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:background="@drawable/successful_verification_button"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />
    </LinearLayout>
</RelativeLayout>